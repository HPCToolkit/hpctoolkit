<HPCVIEW>

<!-- 

  $Id$

  This is an HPCView configuration file that computes several useful
  derived metrics: total number of memory references, cache miss
  rates, and cycles per flop.

  The data for this is collected by 'profile-sgi_ssrun.makefile'

  To use: 
    - Replace HPCAPPL with the name of your program.  
    - Set the path to your application source in the PATH directive.
    - Run make -f profile-sgi_ssrun.makefile
    - Point a web browser at 'hpcview.output/index.html'

-->

<TITLE name="HPCAPPL" />

<!-- The path to program sources.  Append a '*' to recursively descend into subdirectories. E.g.: ./* -->
<PATH name="." viewname="sources" />

<!-- The output from bloop -->
<STRUCTURE name="bloop.psxml" />

<!-- A number of metrics -->
<METRIC name="CYCLES" displayName="CYCLES">
<FILE name="fcy_hwc.pxml" />
</METRIC>

<METRIC name="L1MISS" displayName="L1 MISS">
<FILE name="fdc_hwc.pxml" />
</METRIC>

<METRIC name="L2MISS" displayName="L2 MISS">
<FILE name="fdsc_hwc.pxml"  />
</METRIC>

<METRIC name="ftlb" displayName="ftlb">
<FILE name="ftlb_hwc.pxml" />
</METRIC>

<METRIC name="fgfp" displayName="fgfp">
<FILE name="fgfp_hwc.pxml"  />
</METRIC>

</HPCVIEW>
