<HPCVIEW>

<!-- 

  $Id$

  This is an HPCView configuration file that computes several useful
  derived metrics: total number of memory references, cache miss
  rates, and cycles per flop.

  The data for this is collected by 'profile-sgi_ssrun'

  To use: 
    - Set the name of smg98.
    - Set the path to your source in the PATH directive.
    - (Optional) Set the path to bloop output in the STRUCTURE directive.
    - Run hpcview: 'hpcview -z hpcview_cfg-sgi.xml'
    - Point a web browser at 'hpcview.output/index.html'

-->

<TITLE name="smg98.mips-IRIX64.cc-64-O3 single" />

<!-- The path to program sources.  Append a '*' to recursively descend into subdirectories. E.g.: ./* -->
<PATH name="/home/DSystem/HPCTools/tests/binaries/smg98/src/*"
  viewname="sources" />

<!-- In this case, we need a REPLACE directive -->
<REPLACE in="/home/eraxxon/DDevelop/HPCTools/tests/binaries/smg98/src"
  out="/home/DSystem/HPCTools/tests/binaries/smg98/src"/>

<!-- The output from bloop -->
<STRUCTURE name="bloop.psxml" />

<!-- A number of file and computed metrics -->
<METRIC name="CYCLES" displayName="CYCLES">
<FILE name="fcy_hwc.pxml" />
</METRIC>

<METRIC name="FLOPS" displayName="FLOPS">
<FILE name="fgfp_hwc.pxml"  />
</METRIC>

<METRIC name="cfratio" displayName="CYC/FLOP" percent="false">
<COMPUTE>
 <math>
 <apply>
 <divide/>
 <ci>CYCLES</ci>
 <ci>FLOPS</ci>
 </apply>
 </math>
</COMPUTE>
</METRIC>


<METRIC name="gl" displayName="LOADS" display="false">
<FILE name="gl_hwc.pxml" />
</METRIC>

<METRIC name="gs" displayName="STORES" display="false">
<FILE name="gs_hwc.pxml" />
</METRIC>

<METRIC name="gmem" displayName="MACCESS">
<COMPUTE>
 <math>
 <apply>
 <plus/>
 <ci>gl</ci>
 <ci>gs</ci>
 </apply>
 </math>
</COMPUTE>
</METRIC>


<METRIC name="L1MISS" displayName="L1 MISS">
<FILE name="fdc_hwc.pxml" />
</METRIC>

<METRIC name="L2MISS" displayName="L2 MISS">
<FILE name="fdsc_hwc.pxml"  />
</METRIC>

<METRIC name="TLBMISS" displayName="TLB MISS">
<FILE name="tlb_hwc.pxml"  />
</METRIC>


<METRIC name="l1rate" displayName="L1RATE" percent="false">
<COMPUTE>
 <math>
 <apply>
 <divide/>
 <ci>L1MISS</ci>
 <ci>gmem</ci>
 </apply>
 </math>
</COMPUTE>
</METRIC>

<METRIC name="l2rate" displayName="L2RATE" percent="false">
<COMPUTE>
 <math>
 <apply>
 <divide/>
 <ci>L2MISS</ci>
 <ci>gmem</ci>
 </apply>
 </math>
</COMPUTE>
</METRIC>


</HPCVIEW>
