############################################################
# C Preprocessor
############################################################

# Assumes includer sets MYCXXFLAGS and MYCFLAGS
# cf. CXXCOMPILE (automatically generated by automake)
MYCPPFLAGS_CXX = $(DEFS) $(DEFAULT_INCLUDES) $(INCLUDES) \
	$(AM_CPPFLAGS) $(CPPFLAGS) $(AM_CXXFLAGS) $(CXXFLAGS) \
	$(MYCXXFLAGS)

MYCPPFLAGS_CC  = $(AM_CPPFLAGS) $(CPPFLAGS) $(AM_CFLAGS) $(CFLAGS) \
	$(MYCFLAGS)

%.cpp.pp : %.cpp
	$(CXXCPP) $(MYCPPFLAGS_CXX) $< > $@

%.c.pp : %.c
	$(CXXCPP) $(MYCPPFLAGS_CC) $< > $@

