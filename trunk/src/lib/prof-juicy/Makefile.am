#############################################################################

# We do not want the standard GNU files (NEWS README AUTHORS ChangeLog...)
AUTOMAKE_OPTIONS = foreign

#############################################################################
# Common settings
#############################################################################

include $(top_srcdir)/src/Makeinclude.config

#############################################################################
# Local settings
#############################################################################

MYSOURCES = \
	Metric-Mgr.hpp Metric-Mgr.cpp \
	Metric-ADesc.hpp Metric-ADesc.cpp \
	Metric-IData.hpp Metric-IData.cpp \
	Metric-AExpr.hpp Metric-AExpr.cpp \
	Metric-AExprIncr.hpp Metric-AExprIncr.cpp \
	\
	LoadMapMgr.hpp LoadMapMgr.cpp \
	LoadMap.hpp LoadMap.cpp \
	\
	Struct-Tree.hpp Struct-Tree.cpp \
	Struct-TreeIterator.hpp Struct-TreeIterator.cpp \
	\
	CCT-Tree.hpp CCT-Tree.cpp \
	CCT-TreeIterator.hpp CCT-TreeIterator.cpp \
	\
	Flat-ProfileData.hpp Flat-ProfileData.cpp \
	\
	CallPath-Profile.hpp CallPath-Profile.cpp 


# GNU binutils flags are needed for HPC_LIBISA.
MYCFLAGS   = @HOST_CFLAGS@   $(HPC_IFLAGS) @GNUBINUTILS_IFLAGS@
MYCXXFLAGS = @HOST_CXXFLAGS@ $(HPC_IFLAGS) @GNUBINUTILS_IFLAGS@

if IS_HOST_AR
  MYAR = @HOST_AR@
else
  MYAR = $(AR) cru
endif

MYLIBADD = @HOST_LIBTREPOSITORY@

MYCLEAN = @HOST_LIBTREPOSITORY@

#############################################################################
# Automake rules
#############################################################################

noinst_LTLIBRARIES = libHPCprof-juicy.la

libHPCprof_juicy_la_SOURCES  = $(MYSOURCES)
libHPCprof_juicy_la_CFLAGS   = $(MYCFLAGS)
libHPCprof_juicy_la_CXXFLAGS = $(MYCXXFLAGS)
libHPCprof_juicy_la_AR       = $(MYAR)
libHPCprof_juicy_la_LIBADD   = $(MYLIBADD)

MOSTLYCLEANFILES = $(MYCLEAN)

#############################################################################
# Common rules
#############################################################################

include $(top_srcdir)/src/Makeinclude.rules

