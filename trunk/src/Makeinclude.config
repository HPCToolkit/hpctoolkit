#############################################################################
# HPCTOOLKIT Components and Settings
#############################################################################

# $(top_srcdir) is fine, but $(abs_top_srcdir) must be used with @@
HPCTOOLKIT = @abs_top_srcdir@

############################################################
# Local includes
############################################################

HPC_IFLAGS = -I$(HPCTOOLKIT)/src

############################################################
# Local libraries
############################################################

# Linking dependencies:
#   HPC_LIBBINUTILS : HPC_LIBISA HPC_LIBSUPPORT
#   HPC_LIBISA      : HPC_LIBSUPPORT
#   HPC_LIBXML      : HPC_LIBSUPPORT
#   HPC_LIBSUPPORT  :
#   HPC_LIBHPCFILE  :

HPC_LIBBINUTILS = $(top_builddir)/src/lib/binutils/libHPCbinutils.a
HPC_LIBISA      = $(top_builddir)/src/lib/ISA/libHPCisa.a
HPC_LIBXML      = $(top_builddir)/src/lib/xml/libHPCxml.a
HPC_LIBSUPPORT  = $(top_builddir)/src/lib/support/libHPCsupport.a
HPC_LIBHPCFILE  = $(top_builddir)/src/lib/hpcfile/libHPCfile.a

