#############################################################################
# Makeinclude.config.ia64-Linux
#############################################################################

#############################################################################
# Site/machine/architecture dependent configuration 
#############################################################################

#-----------------------------------------------------------------
#  Compilers and building tools
#-----------------------------------------------------------------

#  Paths
GCC_BIN_32 = /usr/local/gcc-3.2.2/bin
GCC_BIN = $(GCC_BIN_32)

INTEL_BIN = /usr/local/intel/compiler60/ia64/bin

#  C++ compiler
#CXX = ecpc
  # Note: use default template handling

CXX = g++ -Wall
  # Note: use default template handling (use 3.0.4 or later)

#  ANSI C compiler
#CC = ecc
CC = gcc

#  Archiver
AR = /usr/bin/ar -rv  # g++ and Intel

#-----------------------------------------------------------------
#  Compiling and linking flags 
#-----------------------------------------------------------------

# C/C++ Flags
ifdef RELEASE
  USER_CXXFLAGS = -O -D_IEEE
  USER_CFLAGS   = -O -D_IEEE
else 
  USER_CXXFLAGS = -g -D_IEEE
  USER_CFLAGS   = -g -D_IEEE
endif

#    _IEEE: for NaN stuff

USER_C_IFLAGS  =
USER_C_LDFLAGS = 

# comment out this line to use an automatic repository
#SPECIFY_CXX_TREPOSITORY = 1
#CXX_TREPOSITORY_ARG =

# Archiving flags
ARFLAGS =

#-----------------------------------------------------------------
#  Other development tools 
#-----------------------------------------------------------------

# Purify

PURE_LDFLAGS = 

PURIFY = 
