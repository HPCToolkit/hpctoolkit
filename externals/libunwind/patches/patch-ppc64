 get_arch() {
  case "$1" in
   arm*) echo arm;;
   i?86) echo x86;;
   hppa*) echo hppa;;
   mips*) echo mips;;
-  powerpc*) is_gcc_m64;;
+  ppc* | powerpc* )
+    case "$ac_cv_sizeof_void_p" in
+      4 ) echo ppc32 ;;
+      8 ) echo ppc64 ;;
+      * ) { { echo "$as_me:$LINENO: error: unknown sizeof for void *: $ac_cv_sizeof_void_p" >&5
+echo "$as_me: error: unknown sizeof for void *: $ac_cv_sizeof_void_p" >&2;}
+   { (exit 1); exit 1; }; } ;;
+    esac
+    ;;
   *) echo $1;;
  esac
 }
