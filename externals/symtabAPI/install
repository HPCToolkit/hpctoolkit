#!/bin/sh
#
#  SymtabAPI install.
#
#  $Id$
#

PKG_NAME=symtabAPI
src=symtabAPI/src

. ../build-utils/configure.inc
pre_install

mkdir -p "${prefix}/include" || die "unable to mkdir: ${prefix}/include"
mkdir -p "${prefix}/lib" || die "unable to mkdir: ${prefix}/lib"

cd "$src" || die "unable to cd: $src"
test -f include/Symtab.h || die "missing include files: ${src}/include"
cp include/* "${prefix}/include"

cd "$symtabAPI_platform" || die "unable to cd: $symtabAPI_platform"
test -f lib/libsymtabAPI.so || die "missing lib files: ${src}/lib"
cp lib/* "${prefix}/lib"

post_install
