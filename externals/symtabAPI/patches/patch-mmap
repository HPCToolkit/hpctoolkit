@@ -83,7 +83,7 @@
 		close( fd );
 		return 0;
 		}
-	 if( ( mmdev_timer_addr = (volatile unsigned long int *)mmap( 0, getpagesize(), PROT_READ, MAP_SHARED, fd, 0 ) ) == NULL ) {
