#!/bin/sh
#
#  Libmonitor configure.
#
#  $Id: configure 1565 2008-08-26 16:23:46Z krentel $
#

PKG_NAME=libmonitor
src=libmonitor-r92

. ../build-utils/configure.inc
pre_configure

set -- --prefix="$prefix" "$@"
set -- CC="$CC" CFLAGS="$CFLAGS" "$@"
. ../build-utils/dup-args.sh

make_work_dir
cd work || die "unable to cd: work"

echo configure "$@"
../${src}/configure "$@"
test $? -eq 0 || die "configure failed"

post_configure
