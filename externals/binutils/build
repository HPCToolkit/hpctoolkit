#!/bin/sh
#
#  Binutils build.
#
#  $Id$
#

# NOTE: this file is necessary only becuase we selectively build
# subdirs (see configure)

PKG_NAME=binutils
src=version-binutils-2.20.1/binutils-2.20.1

. ../build-utils/configure.inc
pre_build

cd work || die "unable to cd: work"
work_dir=`pwd`

# ----------------------------------------------------------
# Only build what we need
# ----------------------------------------------------------
dirs="libiberty bfd opcodes intl binutils"
for x in ${dirs}; do
    echo "=> ${x}/build"
    cd ${work_dir}/${x}
    $MAKE || die "unable to build ${x}"
done

post_build
