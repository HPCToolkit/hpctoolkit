#!/bin/sh
#
#  Binutils build.
#
#  $Id$
#

# NOTE: this is necessary only becuase we selectively build subdirs
# (see configure)

PKG_NAME=binutils
SRC=version-binutils-2.17/binutils-2.17

. ../build-utils/configure.inc
pre_build

cd work || die "unable to cd: work"
WORK=`pwd`


for x in ${BINUTILS_DIRS}; do
    echo "=> ${x}/build $@"
    cd ${WORK}/${x}
    $MAKE || die "build in ${x} failed"
done


post_build
