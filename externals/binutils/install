#!/bin/sh
#
#  Binutils install.
#
#  $Id$
#

PKG_NAME=binutils
src=version-binutils-2.17/binutils-2.17

. ../build-utils/configure.inc
pre_install

cd "$src" || die "unable to cd: $src"
src_dir=`pwd`

#
# Copy extra headers: demangle.h plus its dependencies
#
dir_from=${src_dir}
dir_to="${prefix}/include/"
to_copy="include/demangle.h include/libiberty.h include/ansidecl.h"

mkdir -p "${dir_to}" || die "unable to mkdir: ${dir_to}"
for fnm in ${to_copy} ; do
    cp "${dir_from}/${fnm}" ${dir_to} || die "cannot cp: ${dir_from}/${fnm}"
done

post_install
