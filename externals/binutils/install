#!/bin/sh
#
#  Binutils install.
#
#  $Id$
#

PKG_NAME=binutils
src=version-binutils-2.17

. ../build-utils/configure.inc
pre_install

cd "$src" || die "unable to cd: $src"
src_dir=`pwd`

cd config || die "unable to cd: config"
install_dir=`./hpcplatform`

cd "$src_dir" || die "unable to cd: $src_dir"
cd "$install_dir" || die "unable to cd: $install_dir"

mkdir -p "$prefix" || die "unable to mkdir: $prefix"

tar cf - include lib* | ( cd "$prefix" && tar xvf - )
test $? -eq 0 || die "install failed"

post_install
