#!/bin/sh
#
#  Xerces-C configure.
#
#  $Id$
#

PKG_NAME=xerces
build_dir=xerces-c-src_2_8_0/src/xercesc

. ../build-utils/configure.inc
pre_configure
prefix="$xerces_prefix"

set -- -m inmem -n socket -r pthread -t native "$@" # add -s for static
set -- -c "$CC" -x "$CXX" "$@"
set -- -P "$prefix" -p "$xerces_platform" "$@"
if test -n "${is_cross_compile}" ; then
    set -- -C --host="${host}" "$@"
fi

cd "$build_dir" || die "unable to cd: $build_dir"

echo runConfigure "$@"
./runConfigure "$@"
test $? -eq 0 || die "configure failed"

post_configure
